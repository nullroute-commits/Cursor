# Financial Analytics Platform Environment Configuration
# Copy this file to .env and update with your values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_USER=finance
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=finance
POSTGRES_HOST=db
POSTGRES_PORT=5432
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# =============================================================================
# SMTP CONFIGURATION
# =============================================================================
SMTP_HOST=smtp
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_TLS=false
SMTP_FROM=noreply@financialplatform.local

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# POST-QUANTUM CRYPTOGRAPHY
# =============================================================================
POST_QUANTUM=false
PQ_LIBRARY=pqcrypto
PQ_ENCRYPTION_LEVEL=128

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_URL=http://localhost:8000
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
UI_HOST=0.0.0.0
UI_PORT=8080
UI_RELOAD=true

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
GRAFANA_PASSWORD=admin123
PROMETHEUS_RETENTION_DAYS=7
ALERTMANAGER_SMTP_HOST=smtp
ALERTMANAGER_SMTP_PORT=1025
ALERTMANAGER_SMTP_FROM=alerts@financialplatform.local

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
CORS_ORIGINS=["http://localhost:8080", "http://localhost:3000"]
SECRET_KEY=your_super_secret_key_here_change_in_production
BCRYPT_ROUNDS=12
SESSION_TIMEOUT_MINUTES=60

# =============================================================================
# ANALYTICS CONFIGURATION
# =============================================================================
ANALYTICS_BATCH_SIZE=1000
ANALYTICS_WORKER_POOL_SIZE=4
ANALYTICS_CACHE_TTL_HOURS=24
ANALYTICS_MODEL_UPDATE_INTERVAL_HOURS=6

# =============================================================================
# INGESTION CONFIGURATION
# =============================================================================
INGESTION_CHUNK_SIZE=100
INGESTION_MAX_RETRIES=3
INGESTION_RETRY_DELAY_SECONDS=60
INGESTION_BATCH_TIMEOUT_SECONDS=300

# =============================================================================
# PLAID CONFIGURATION (Optional)
# =============================================================================
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_ENV=sandbox
PLAID_WEBHOOK_VERIFICATION=your_webhook_verification_key

# =============================================================================
# BANK CSV CONFIGURATION
# =============================================================================
BANK_CSV_ENCODING=utf-8
BANK_CSV_DELIMITER=,
BANK_CSV_DATE_FORMAT=%m/%d/%Y
BANK_CSV_AMOUNT_COLUMN=Amount
BANK_CSV_DATE_COLUMN=Date
BANK_CSV_DESCRIPTION_COLUMN=Description

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_RBAC=true
ENABLE_MULTITENANCY=true
ENABLE_ANALYTICS=true
ENABLE_MONITORING=true
ENABLE_ALERTING=true
ENABLE_PLAID_INTEGRATION=false
ENABLE_BANK_CSV_INGESTION=true
ENABLE_POST_QUANTUM_CRYPTO=false

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
DEVELOPMENT_MODE=true
AUTO_RELOAD=true
DEBUG_TOOLBAR=false
PROFILING=false
TESTING=false

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_FORMAT=json
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=DEBUG

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
WORKER_PROCESSES=4
WORKER_THREADS=2
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30
REQUEST_TIMEOUT=60
KEEPALIVE_TIMEOUT=5

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups
BACKUP_COMPRESSION=true

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
EMAIL_NOTIFICATIONS_ENABLED=true
SLACK_WEBHOOK_URL=
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
DATADOG_API_KEY=
CLOUDWATCH_ACCESS_KEY=
CLOUDWATCH_SECRET_KEY=
CLOUDWATCH_REGION=us-east-1